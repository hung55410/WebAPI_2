@model List<WebAPI_2.Models.Users>

<h2>@ViewBag.Title</h2>

@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Password</th>
                <th>Fullname</th>
                <th>Is Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Password</td>
                    <td>@user.Fullname</td>
                    <td>@user.IsActive</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No User Found</p>
}
